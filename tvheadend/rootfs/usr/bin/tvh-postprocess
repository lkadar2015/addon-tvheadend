#!/bin/bash

# variables
TSVIDEO=$1 

tempfile=$(tempfile)

echo "Inputfile: $TSVIDEO" >> /config/log.txt

echo "Moving to tempfile: $TSVIDEO to $tempfile" >> /config/log.txt
mv $TSVIDEO $tempfile >> /config/log.txt 2>&1
echo "Converting file: $tempfile" >> /config/log.txt
/usr/bin/ffmpeg -i "$tempfile" -c:v h264 -c:a mp3 -filter:v fps=50 "$TSVIDEO" >> /config/log.txt 2>&1
rm $tempfile >> /config/log.txt 2>&1