#!/usr/bin/with-contenv bashio
# shellcheck shell=bash
# ==============================================================================
# Home Assistant Community Add-on: TVHeadend
# Starts TVHeadend
# ==============================================================================

bashio::log.info "Starting TVHeadend..."

if bashio::config.has_value 'satip_xml'; then
  exec /usr/bin/tvheadend -u root -g root -c /config/tvheadend --satip_xml "$(bashio::config 'satip_xml')"
else
  exec /usr/bin/tvheadend -u root -g root -c /config/tvheadend
fi
